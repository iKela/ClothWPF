<Window x:Class="ClothWPF.Arrival.Supplier.SupplierInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothWPF.Arrival.Supplier"
        mc:Ignorable="d"
        Title="SupplierInfo" Height="450" Width="800">
   
    <Window.Resources>
        <Style  TargetType="{x:Type TabControl}" x:Key="TabControlFlatStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TabPanel Grid.Row="0" 
                                      Panel.ZIndex="1" 
                                      Margin="0 0 4 -1" 
                                      IsItemsHost="True" 
                                      Background="#EDEDED" />
                            <Border Grid.Row="1" BorderBrush="Transparent" CornerRadius="0 12 12 12">
                                <ContentPresenter ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}" x:Key="TabItemFlatStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border 
             Name="Border"
             Background="Transparent"
             BorderBrush="Transparent" 
             BorderThickness="0"
             CornerRadius="0" >
                                <ContentPresenter x:Name="ContentSite"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               ContentSource="Header"
               Margin="12 2 12 2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextElement.Foreground" 
                                        TargetName="ContentSite" Value="Blue" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="TextElement.Foreground" 
                                        TargetName="ContentSite" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="TextElement.FontWeight"
                                           TargetName="ContentSite" Value="Bold"/>
                                <Setter Property="TextElement.Foreground" 
                                            TargetName="ContentSite" Value="Blue"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="TextElement.FontWeight" 
                                             TargetName="ContentSite" Value="Normal"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Style="{StaticResource TabControlFlatStyle}">
            <TabItem Header="Загальні" Style="{StaticResource TabItemFlatStyle}"/>
            <TabItem Header="Додатково" Style="{StaticResource TabItemFlatStyle}"/>
        </TabControl>
    </Grid>
</Window>
